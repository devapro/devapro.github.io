<nav id="pagination">
  <% if (page.prev){ %>
    <a href="<%- url_for_lang(page.prev_link) %>" class="alignleft prev"><%= __('prev') %></a>
  <% } %>
  <% if (page.next){ %>
    <a href="<%- url_for_lang(page.next_link) %>" class="alignright next"><%= __('next') %></a>
  <% } %>
  <div class="clearfix"></div>
</nav>