#header
  text-shadow 0 0 1px #fff
  margin 50px auto
  a
    color #999
    &:hover
      color color-link
      text-decoration none
    
  h1
    font-weight normal
    font-size 2.5em
    line-height 1

  h2
    font-weight normal
    font-size 0.9em
    line-height 1
    margin-top 10px
  
  #main-nav
    font-family font-title
    line-height 2.5em
    display inline-block
    vertical-align middle
    ul
      list-style none
      margin 0
      li
        float left
        margin-left 30px

  #lang-switcher
    font-family font-title
    line-height 2.5em
    display inline-block
    vertical-align middle
    margin-right 30px
    ul
      list-style none
      margin 0
      li
        float left
        margin-left 15px
        &:first-child
          margin-left 0
        a
          color #555
          text-decoration none
          font-size 0.9em
          padding 2px 8px
          border 1px solid transparent
          border-radius 3px
          &:hover
            color #000
            border-color #ddd
          &.active
            color #fff
            background #4A4A4A
            border-color #4A4A4A